def add(x, y):
    return x + y

def subtract(x, y):
    return x - y

def multiply(x, y):
    return x * y

def divide(x, y):
    if y == 0:
        return "Det går inte att dela med noll!"
    else:
        return x / y

print("Välkommen till miniräknaren!")
print("Välj operation:")
print("1. Addition")
print("2. Subtraktion")
print("3. Multiplikation")
print("4. Division")

while True:
    val = input("Ange val (1/2/3/4): ")

    if val in ('1', '2', '3', '4'):
        num1 = float(input("Ange första talet: "))
        num2 = float(input("Ange andra talet: "))

        if val == '1':
            print("Resultat:", add(num1, num2))
        elif val == '2':
            print("Resultat:", subtract(num1, num2))
        elif val == '3':
            print("Resultat:", multiply(num1, num2))
        elif val == '4':
            print("Resultat:", divide(num1, num2))
        
        break
    else:
        print("Ogiltigt val! Försök igen.")